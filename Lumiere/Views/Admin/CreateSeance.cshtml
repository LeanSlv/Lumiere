@model Lumiere.ViewModels.CreateSeanceViewModel

    <form name="registration" id="form" method="post" asp-controller="Seance" asp-action="Create" class="p-4" style="max-width: 450px;">
        <div class="form-row">
            <div class="form-group col">
                <label for="filmID">Название фильма</label>
                <select asp-for="FilmId" required class="form-control">
                    <option selected disabled>-- Выберите фильм</option>
                    @await Component.InvokeAsync("FilmsSelect")
                </select>
            </div>
        </div>    
        <div class="form-row d-flex justify-content-between">
            <div class="form-group col-md-5">
                <label asp-for="Date">Дата сеанса</label>
                <input type="date" asp-for="Date" required class="form-control" value="2020-01-01" />
            </div>
            <div class="form-group col-md-5">
                <label asp-for="Time">Время</label>
                <input type="time" asp-for="Time" required class="form-control" />
            </div>
            <div class="form-group col-md-5">
                <label asp-for="RoomNumber">Зал</label>
                <input type="number" asp-for="RoomNumber" required class="form-control" />
            </div>
            <div class="form-group col-md-5">
                <label asp-for="Price">Цена</label>
                <input type="number" asp-for="Price" required class="form-control" />
            </div>
        </div>
        <div class="col-md-5 m-auto">
            <input type="submit" value="Добавить" required class="form-control btn btn-secondary" />
        </div>
    </form>

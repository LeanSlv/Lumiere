@model Lumiere.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Восстановление пароля";
}

    <div id="container--account">
        <div class="container w-75 mt-5 mb-5">
            <h4 class="text-center mb-2">Сброс пароля</h4>
            <div class="d-flex flex-column align-items-center">
                <form class="p-2 mt-2" style="min-width:350px; max-width:500px;"  method="post" asp-controller="Account" asp-action="ResetPassword">
                    <div asp-validation-summary="All"></div>
                    <input type="hidden" asp-for="Token" />

                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input type="email" asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NewPassword">Новый пароль</label>
                        <input type="password" asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Подтверждение пароля</label>
                        <input type="password" asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>

                    <div>
                        <input type="submit" value="Изменить" class="btn btn-secondary"/>
                    </div>
                </form>
            </div>
        </div>
    </div>

@using Lumiere.ViewModels
@model List<ReservedFilmViewModel>

@foreach (ReservedFilmViewModel reservedFilm in Model)
{
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <a asp-controller="Film" asp-action="Index" asp-route-id=@reservedFilm.FilmId>
                    <img src=@reservedFilm.FilmPosterUrl class="card-img" alt="Постер к фильму">
                </a>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title text-center">@reservedFilm.FilmName</h5>

                    <div class="d-flex flex-column text-center justify-content-between">
                        <span class="card-text text-dark mb-2">Длительность: @reservedFilm.FilmDuration</span>
                        <p class="card-text h6">Дата сеанса: @reservedFilm.SeanceDate.ToString("m")</p>
                        <p class="card-text h6">Время сеанса: @reservedFilm.SeanceTime.ToString(@"hh\:mm")</p>
                        <p class="card-text h6">Зал @reservedFilm.RoomNumber</p>
                        @foreach (KeyValuePair<Guid, string> seatRowNumber in reservedFilm.SeatRowNumbers)
                        {
                            <p class="card-text h6">@seatRowNumber.Value</p>
                            <form asp-controller="Booking" asp-action="Delete" asp-route-seatId=@seatRowNumber.Key>
                                <button type="submit"><i class="fas fa-times"></i></button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@model Lumiere.Models.User

@{
    ViewData["Title"] = "Profile";
}

<main id="container--account">
    <div class="container w-75">
        <i class="icofont-home left-corner"></i>
        <h4 class="text-center mb-4">Личный кабинет | @Model.FirstName @Model.SecondName</h4>
        <hr>
        <div class="row">
            <div class="col col-lg-5">
                <div class="text-center mb-4">
                    <span class="h5">Личная информация</span>
                    <a asp-controller="User" asp-action="Edit" asp-route-id=@Model.Id>
                        <i class="icofont-pencil-alt-2 ml-3"></i>
                    </a>
                </div>
                <ul class="list-group">
                    <li class="list-group-item">
                        <i class="fa fa-user-circle mr-2" aria-hidden="true"></i>
                        @Model.SecondName
                    </li>
                    <li class="list-group-item">
                        <i class="fa fa-user-circle mr-2" aria-hidden="true"></i>
                        @Model.FirstName
                    </li>
                    <li class="list-group-item">
                        <i class="fa fa-envelope mr-2" aria-hidden="true"></i>
                        @Model.Email
                    </li>
                    <li class="list-group-item">
                        <i class="fa fa-calendar mr-2" aria-hidden="true"></i>
                        @Model.DateOfBirth.ToString("d")
                    </li>
                </ul>
            </div>

            <div class="scrollable col pl-4">
                <div class="mb-4 text-center"><span class="h5">Забронированные фильмы</span></div>

                <!-- Horizontal movie card -->
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="./img/posters/img1.jpg" class="card-img" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title text-center">Лесси. Возвращение домой 2D</h5>
                                <div class="d-flex flex-column text-center justify-content-between">
                                    <span class="card-text text-dark mb-2">Длительность: 1 час 40 минут</span>
                                    <p class="card-text h6">Время сеанса: 12:20</p>
                                    <p class="card-text h6">Зал 1</p>
                                    <p class="card-text h6">Ряд 5 Места 3,4</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="./img/posters/img1.jpg" class="card-img" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title text-center">Лесси. Возвращение домой 2D</h5>
                                <div class="d-flex flex-column text-center justify-content-between">
                                    <span class="card-text text-dark mb-2">Длительность: 1 час 40 минут</span>
                                    <p class="card-text h6">Время сеанса: 12:20</p>
                                    <p class="card-text h6">Зал 1</p>
                                    <p class="card-text h6">Ряд 5 Места 3,4</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</main>
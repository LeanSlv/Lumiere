@using System.Globalization
@model Dictionary<Guid, string>

<div class="d-flex justify-content-around shadow">
    <div class="d-flex flex-column justify-content-center text-center">
        <h2>
            Афиша
        </h2>
        <h3 class="h5">
            на @DateTime.Today.ToString("d")
        </h3>
    </div>
    <div class="swiper-container">
        <div class="swiper-wrapper">
            @foreach (KeyValuePair<Guid, string> filmPoster in Model)
            {
                <div class="swiper-slide">
                    <a asp-controller="Film" asp-action="Index" asp-route-id=@filmPoster.Key>
                        <img src=@filmPoster.Value alt="Постер фильма">
                    </a>
                </div>
            }
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>
</div>